
@model B2B_Deneme.ViewModels.VMMusteriler
@{
    ViewData["Title"] = "Siparişler";

}

<div class="container-fluid list-products">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5>Siparişler</h5>
                </div>
                <div class="card-header pb-0 text-right">
                    <a class="btn btn-primary" asp-controller="Order" asp-action="CreateOrder"><span>Sipariş Oluştur</span></a>

                </div>
                <div class="card-body">
                    <div class="table-responsive product-table">
                        <table class="display" id="basic-1">
                            <thead>
                                <tr>
                                    <th>Sipariş No</th>
                                    <th>Sipariş Tarihi</th>
                                    <th>Teslim Tarihi</th>
                                    <th>Sipariş Tutarı</th>
                                    <th>Düzenle</th>
                               
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CariSipBilgileri !=null)
                                {

                                    @foreach (var Cari in Model.CariSipBilgileri)
                                    {
                                        <tr>

                                            <th>@Cari["SipNo"]</th>
                                            <td>@Cari["KTRH"]</td>
                                            <td>@Cari["TESTRH"]</td>
                                            <td>@Cari["SIPTUTAR"]</td>
                                            <td>
                                                <a href="/Order/EditOrder/@Cari["SipSira"]"><li data-feather="edit"></li></a>
                                            <td>
                                        </tr>
                                    }


                                }  </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


